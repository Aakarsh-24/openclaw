apiVersion: v1
kind: Secret
metadata:
  name: clawdbot-secrets
  namespace: clawdbot
type: Opaque
stringData:
  # Gateway token để authenticate với Control UI
  # Generate với: openssl rand -base64 32
  CLAWDBOT_GATEWAY_TOKEN: "your-secure-random-token-here"
  
  # Anthropic API Key (nếu dùng API key thay vì OAuth)
  ANTHROPIC_API_KEY: "sk-ant-..."
  
  # Claude OAuth credentials (nếu có)
  CLAUDE_AI_SESSION_KEY: ""
  CLAUDE_WEB_SESSION_KEY: ""
  CLAUDE_WEB_COOKIE: ""
  
  # OpenAI credentials (optional)
  OPENAI_API_KEY: ""
  
  # Telegram bot token (optional)
  TELEGRAM_BOT_TOKEN: ""
  
  # Discord bot token (optional)
  DISCORD_BOT_TOKEN: ""
  
  # Slack tokens (optional)
  SLACK_BOT_TOKEN: ""
  SLACK_APP_TOKEN: ""
